<h1><%= @giftlist.name %></h1>

<p>Gift recipient: <%= @giftlist.giftee %></p>

<p><%= @giftlist.note %></p>

<% @giftlist.gifts.each do |gift| %>
  <ul>
    <li><%= link_to gift.name, gift %></li>
  </ul>
<% end %>

<div class="show-buttons"><%= button_to "Edit Giftlist", edit_giftlist_path(@giftlist), method: 'get' %> <%= button_to "Delete Giftlist", giftlist_path(@giftlist), method: 'delete' %></div>
