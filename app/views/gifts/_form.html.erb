    ['fashionista', "fashion+style"], ['techie', "tech+technology"], ['outdoorsy type', "outdoorsy"], ['loves vintage', "vintage"], ['foodie', 5], ['art aficionado', 6], ['gadget collector', 7], ['home decorator', 8]
