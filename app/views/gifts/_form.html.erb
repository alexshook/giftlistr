  <%= select_tag(:q1, options_for_select([
    ['one of the girls', "gifts+women"], ['one of the guys', "gifts+men"], ['coworker', "gifts+coworker"], ['couple', "gifts+couples"], ['mother', "gifts+mother"], ['father', "gifts+father"]
